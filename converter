#include<stdio.h>
#include<stdbool.h>
void red()
{
	printf("\033[1;31m");
}
void yellow()
{
	printf("\033[1;33m");
}
void reset()
{
	printf("\033[0m");
}
void green()
{
	printf("\033[0;32m");
}
int option_info()
{
	int userOption;
	green();
	printf("1 for conversion between Kilometer and Mile\n");
	printf("2 for conversion between Litre and Gallon\n");
	printf("3 for conversion between Centimeter and Inch\n");
	printf("4 for conversion between Celsius and Fahrenheit\n");
	printf("5 for quit\n\n");
	printf("Please enter your option: ");
	scanf("%d", &userOption);
	reset();
	printf("\n");
	return userOption;
}
void case_1()
{
	bool flag=1;
	char unit_select;
	float result =0;
	float data_input;
	while (flag==1)
	{
		green();
		printf("K for conversion from Kilometer to Mile\n");
		printf("M for conversion from Mile to Kilometer\n");
		printf("Please enter your option: ");
		scanf("%s", &unit_select);
		reset();
		if(unit_select=='K')
		{
			green();
			printf("Please enter data in Kilometer: ");
			scanf("%f", &data_input);
			reset();
			result=data_input*0.621371;
			yellow();
			printf("\n%f Kilometer equal %f Mile\n\n",data_input,result);
			reset();
			flag=0;
		}
		else if(unit_select=='M')
		{
			green();
			printf("Please enter data in Mile: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*1.60934;
			yellow();
			printf("\n%f Mile equal %f Kilometer\n\n",data_input,result);
			reset();
			flag=0;
		}
		else
		{
			red();
			printf("\nInvalid input! Enter again\n");
			reset();
		}
	}
}
void case_2()
{
	bool flag=1;
	char unit_select;
	float result=0;
	float data_input;
	while(flag==1)
	{
		green();
		printf("L for conversion from Litre to Gallon\n");
		printf("G for conversion from Gallon to Litre\n");
		printf("Please enter your option: ");
		scanf("%s", &unit_select);
		reset();
		if (unit_select=='L')
		{	green();
			printf("Please enter data in Litre: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*0.2645172;
			yellow();
			printf("\n%f Litre equal %f Gallon\n\n", data_input,result);
			reset();
			flag=0;
		}
		else if(unit_select=='G')
		{
			green();
			printf("Please enter data in Gallon: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*3.78541;
			yellow();
			printf("\n%f Gallon equal %f Litre\n\n",data_input,result);
			reset();
			flag=0;
		}
		else
		{	red();
			printf("\nInvalid input! Enter again\n");
			reset();
		}
	}
}
void case_3()
{
	bool flag=1;
	char unit_select;
	float result=0;
	float data_input;
	while(flag==1)
	{
		green();
		printf("C for conversion from Centimeter to Inch\n");
		printf("I for conversion form Inch to Centimeter\n");
		printf("Plase enter your option: ");
		scanf("%s",&unit_select);
		reset();
		if (unit_select=='C')
		{
			green();
			printf("Please enter data in Centimeter: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*0.393701;
			yellow();
			printf("\n%f Centimetet equal %f Inch\n\n",data_input,result);
			reset();
			flag=0;
		}
		else if (unit_select =='I')
		{
			green();
			printf("Please enter data in Inch: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*2.54;
			yellow();
			printf("\n%f Inch equal %f Centimeter\n\n", data_input, result);
			reset();
			flag=0;
		}
		else
		{	red();
			printf("\nInvalid input! Enter again\n");
			reset();
		}
	}
}
void case_4()
{
	bool flag=1;
	char unit_select;
	float result=0;
	float data_input;
	while(flag==1)
	{
		green();
		printf("C for conversion from Celsius to Fahrenheit\n");
		printf("F for conversion from Fahrenheit to Celsius\n");
		printf("Please enter your option: ");
		scanf("%s",&unit_select);
		reset();
		if(unit_select =='C')
		{
			green();
			printf("Please enter data in Celsius: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*32;
			yellow();
			printf("\n%f Celsius equal %f Fahrenheit\n\n", data_input, result);
			reset();
			flag=0;
		}
		else if (unit_select =='F')
		{
			green();
			printf("Please enter data in Fahrenheit: ");
			scanf("%f",&data_input);
			reset();
			result=data_input*2.54;
			yellow();
			printf("\n%f Fahrenheit equal %f Celsius\n\n",data_input,result);
			reset();
			flag=0;
		}
		else
		{
			red();
			printf("\nInvalid input! Enter again\n");
			reset();
		}
	}
}
bool case_5()
{
	red();
	printf("Quit!\n");
	reset();
	return 0;
}
int main()
{
	bool flag=1;
	int user_option;
	while (flag==1)
	{
		user_option=option_info();
		switch(user_option)
		{
			case 1:
				case_1();
				break;
			case 2:
				case_2();
				break;
			case 3:
				case_3();
				break;
			case 4:
				case_4();
				break;
			case 5:
				flag=case_5();
				break;
			default:
				red();
				printf("Error! Enter again!\n");
				reset();
		}
	}
	return 0;
}
